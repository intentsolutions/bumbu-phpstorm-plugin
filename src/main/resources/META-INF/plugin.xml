<idea-plugin>
    <id>pro.dkart.bumbu</id>

    <name>Bumbu</name>

    <vendor email="dkashavtsev@gmail.com" url="https://dkart.pro">DKart</vendor>

    <description><![CDATA[
    This plugin is designed for integration with the Bumbu: A Symfony Analog of Lombok bundle. It enhances development by providing autocomplete, syntax highlighting, and support for working with attributes and methods generated by the bundle.
  ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.jetbrains.php</depends>

    <extensions defaultExtensionNs="com.intellij">
        <completion.contributor language="PHP" order="last"
                                implementationClass="pro.dkart.bumbu.completion.BumbuCompletionContributor"/>

        <psi.implicitReferenceProvider implementation="pro.dkart.bumbu.reference.CustomReferenceProvider"/>

        <daemon.highlightInfoFilter implementation="pro.dkart.bumbu.highlightFilter.CustomHighlightInfoFilter"/>
    </extensions>

    <resource-bundle/>
</idea-plugin>